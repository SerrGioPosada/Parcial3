<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.parcial3.controller.DoctorsViewController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

    <VBox style="-fx-padding: 10 0 15 0; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 2 0;">
        <Label text="Portal del Doctor" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Seleccionar Doctor:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="doctorComboBox" promptText="Elija un doctor..." HBox.hgrow="ALWAYS"/>
        <Button text="Cargar Mis Citas" onAction="#handleLoadAppointments"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
    </HBox>

    <Separator/>

    <Label text="Mis Citas Agendadas" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <TableView fx:id="appointmentsTable" minHeight="300" prefHeight="350" maxHeight="350">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" minWidth="70" prefWidth="100"/>
            <TableColumn fx:id="patientColumn" text="Paciente" minWidth="150" prefWidth="200"/>
            <TableColumn fx:id="dateColumn" text="Fecha" minWidth="100" prefWidth="120"/>
            <TableColumn fx:id="timeColumn" text="Hora" minWidth="80" prefWidth="100"/>
            <TableColumn fx:id="priceColumn" text="Precio" minWidth="90" prefWidth="120"/>
            <TableColumn fx:id="stateColumn" text="Estado" minWidth="100" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Iniciar Cita" onAction="#handleStartAppointment"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        <Button text="Completar Cita" onAction="#handleCompleteAppointment"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
    </HBox>

</VBox>

