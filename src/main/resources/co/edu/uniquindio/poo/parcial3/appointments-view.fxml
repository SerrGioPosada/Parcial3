<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.parcial3.controller.AppointmentsViewController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">

    <VBox style="-fx-padding: 10 0 15 0; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 2 0;">
        <Label text="GestiÃ³n de Citas" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Buscar por ID o paciente..." HBox.hgrow="ALWAYS"
                   style="-fx-padding: 10; -fx-font-size: 13px; -fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        <Button text="Buscar" onAction="#handleSearch"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
    </HBox>

    <TableView fx:id="appointmentsTable" minHeight="300" prefHeight="400" maxHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" minWidth="70" prefWidth="100"/>
            <TableColumn fx:id="patientColumn" text="Paciente" minWidth="120" prefWidth="150"/>
            <TableColumn fx:id="doctorColumn" text="Doctor" minWidth="120" prefWidth="150"/>
            <TableColumn fx:id="dateColumn" text="Fecha" minWidth="90" prefWidth="110"/>
            <TableColumn fx:id="timeColumn" text="Hora" minWidth="70" prefWidth="90"/>
            <TableColumn fx:id="priceColumn" text="Precio" minWidth="80" prefWidth="100"/>
            <TableColumn fx:id="stateColumn" text="Estado" minWidth="90" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Confirmar" onAction="#handleConfirm"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        <Button text="Completar" onAction="#handleComplete"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        <Button text="Cancelar" onAction="#handleCancel"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
    </HBox>

</VBox>
